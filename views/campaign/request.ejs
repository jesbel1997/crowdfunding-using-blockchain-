<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<body>
    <nav class="navbar">
        <span class="navbar-brand">EasyFund</span>
    </nav>
    <div class="nav-side-menu">
        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">
                <li>
                    <a><i class="fa fa-dashboard">Welcome USER</i></a>
                </li>
                <li data-toggle="collapse" data-target="#products" class="collapsed">
                    <a href="/campaign"><i class="fa fa-gift fa-lg"></i>Home</a>
                </li>
                <li data-toggle="collapse" data-target="#service" class="collapsed active">
                    <a href="/campaign/list"><i class="fa fa-globe fa-lg"></i>Requests</a>
                </li>
                <li data-toggle="collapse" data-target="#detailsCollapse" class="collapsed">
                    <a href="/logout"><i class="fa fa-user fa-lg"></i>Logout</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="my-container">
        <div class="col-md-12 offset-md-12" style="float: right; margin-bottom: 20px;">
            <button type="button" class="btn btn-primary" style="float: right;" onclick="goto()">
                Request Payment
            </button>
        </div>
        <div class="my-row">
            <h3>Requests</h3>
            <div class="table-responsive table-bordered movie-table" style="overflow-x: scroll;">
                <table class="table movie-table">
                                    <tr class="movie-table-head">
                    <th>Sl No</th>
                    <th>Recipient</th>
                    <th>Payer</th>
                    <th>Purpose</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>

                                            <%
                        var len = list.length;
                        for(var i = 0;i < len;i++){
                        %>
                        <!--row-->
                        <tr class="dark-row">
                        <td><%=i+1%></td>
                        <td> <%=list[i].recipient%> </td>
                        <td> <%=list[i].payer%></td>
                        <td> <%=list[i].purpose%></td>
                        <td> <%=list[i].amount%></td>
                        <td> <%=list[i].status%></td>
                        </tr>
                        <!--/.row-->

                        <%
                        }
                        %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        function goto() {
            window.location.href = '/campaign/new';
        }
    </script>
</body>

</html>